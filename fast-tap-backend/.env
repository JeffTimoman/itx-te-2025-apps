# Example environment variables for fast-tap-backend
# Copy this file to .env and edit values as needed.

# CORS origin allowed to access the backend (frontend origin)
# CORS origin allowed to access the backend (frontend origin)
# Update to your public DNS for deployment
CORS_ORIGIN=https://te-itx-2025.site

# Enable Redis (true/false). For production deployment we enable Redis.
ENABLE_REDIS=true

# Redis connection (used only if ENABLE_REDIS=true)
# For deployment we use the redis service name
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Server port
PORT=5000

# Defaults
MAX_PLAYERS_PER_ROOM=500
# Default game duration in ms (used as fallback if not provided by admin)
GAME_DURATION=3000000

POSTGRES_USER=ftuser
POSTGRES_PASSWORD=ftpassword
POSTGRES_DB=fasttap
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# SMTP (for sending verification emails)
SMTP_HOST=smtp-send-only
SMTP_PORT=25
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@te-itx-2025.site

# Session settings (change SESSION_SECRET to a strong random value in production)
SESSION_NAME=itx.sid
SESSION_SECRET=0a8f6c9b3e2d7f1e4c5a9b8f2d3c1e7f9a0b1c2d3e4f5a6b7c8d9e0f1a2b3c4

# JWT secret for signing admin tokens (set in production)
JWT_SECRET=e14c0768409a339e0bbc407d1c568130

# Comma-separated roles allowed to access /api/admin routes (default: admin)
ADMIN_ALLOWED_ROLES=admin

# Optional: full Postgres connection URL (uncomment to use instead of POSTGRES_* parts)
# POSTGRES_URL=postgres://ftuser:ftpassword@postgres:5432/fasttap
