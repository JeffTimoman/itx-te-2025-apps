# Backend Dockerfile
# Uses node:18 slim

FROM node:18-slim

# Create app directory
WORKDIR /usr/src/app

# Install dependencies for production
COPY fast-tap-backend/package*.json ./
COPY fast-tap-backend/src ./src
COPY fast-tap-backend/*.js ./
COPY fast-tap-backend/.env* ./

RUN npm ci --only=production || npm install --only=production

# Expose port
EXPOSE 5000

# Start the server
CMD ["node", "server.js"]
